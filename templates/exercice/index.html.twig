{% extends 'base.html.twig' %}

{% block title %}Exercice index{% endblock %}

{% block body %}

    <html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>

            body {
                margin: 0;
                font-family: Arial, Helvetica, sans-serif;
            }

            .topnav {
                overflow: hidden;
                background-color: #333;
            }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            .topnav a.active {
                background-color: #04AA6D;
                color: white;
            }

        </style>

    </head>
    <body>



    <div class="topnav">
        <a class="active" href="/home">Home</a>
        <a href="{{ path('exercice_index') }}">Coach</a>
        <a href="{{ path('regime_index') }}">Nutritionnistes</a>
        <a href="#about">About</a>
    </div>

    <div style="padding-left:16px">
        <style>
            body{
                background-image: url("https://sport-et-regime.com/wp-content/uploads/2012/06/regime-des-sportifs.jpg");
                background-repeat: no-repeat;
                background-size: cover;
            }

        </style>
     </div>

    </body>
    </html>

 <style>

        body{
    background-image: url("https://resize.prod.docfr.doc-media.fr/rcrop/1200,902,center-middle/img/var/doctissimo/storage/images/fr/www/forme/diaporamas/citation-sport-motivation/1853618-3-fre-FR/30-citations-qui-nous-motivent-a-faire-du-sport.jpg");
    background-size: cover;
    }

    </style>


    <h1 align="center" style="color: #002273">Exercice Coach</h1>

    <table class="table" border="2">
        <thead>
            <tr>
                <th style="color: darkgreen">Id</th>
                <th style="color: darkgreen">Code_exercice</th>
                <th style="color: darkgreen">Mouvement</th>
                <th style="color: darkgreen">Desc_exercice</th>
                <th style="color: darkgreen">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercice in exercices %}
            <tr>
                <td style="color: #035426;font-weight: bolder">{{ exercice.id }}</td>
                <td style="font-weight: bolder">{{ exercice.codeExercice }}</td>
                <td style="font-weight: bolder">{{ exercice.Mouvement }}</td>
                <td style="color: #750104;font-weight: bolder">{{ exercice.descExercice }}</td>
                <td>
                    <a href="{{ path('exercice_show', {'id': exercice.id}) }}">show</a>
                    <a href="{{ path('exercice_edit', {'id': exercice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exercice_new') }}">Create new</a>
{% endblock %}
