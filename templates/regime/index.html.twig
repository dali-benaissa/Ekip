{% extends 'base.html.twig' %}

{% block title %}Regime index{% endblock %}

{% block body %}

    <html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>

            body {
                margin: 0;
                font-family: Arial, Helvetica, sans-serif;
            }

            .topnav {
                overflow: hidden;
                background-color: #333;
            }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            .topnav a.active {
                background-color: #04AA6D;
                color: white;
            }

        </style>

    </head>
    <body>



    <div class="topnav">
        <a class="active" href="/home">Home</a>
        <a href="{{ path('exercice_index') }}">Coach</a>
        <a href="{{ path('regime_index') }}">Nutritionnistes</a>
        <a href="#about">About</a>
    </div>

    <div style="padding-left:16px">
        <style>
            body{
                background-image: url("https://sport-et-regime.com/wp-content/uploads/2012/06/regime-des-sportifs.jpg");
                background-repeat: no-repeat;
                background-size: cover;
            }

        </style>
     </div>

    </body>
    </html>


    <style>
        body {
            background-image: url("https://www.fourchette-et-bikini.fr/sites/default/files/styles/full_1200x630/public/migration-images/d3c112c0ae0da1548505214064fa0b1f.jpg?itok=ITB-_jIG");
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>



     <h1 style="color: #dc3545">Regime Nutritionniste</h1>

    <table class="table" border="2">
        <thead>
            <tr>
                <th>Id</th>
                <th style="color: #002273">Aliments_autorises</th>
                <th style="color: #dc3545">Aliments_interdits</th>
                <th>Petit_dejeuner</th>
                <th style="color: #035426">Collation1</th>
                <th>Dejeuner</th>
                <th style="color: #035426">Collation2</th>
                <th>Diner</th>
                <th>Conseils</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for regime in regimes %}
            <tr>

               <td> {{ regime.id }}</td>
                <td> <font size="4" style="color: firebrick;font-weight: bolder"> {{ regime.AlimentsAutorises }}  </font> </td>
                <td>   <font size="4" style="font-weight: bolder" >{{ regime.AlimentsInterdits }}</td>
                <td>   <font size="4" style="font-weight: bolder">{{ regime.petitDejeuner }}</td>
                <td style="color: #035426;font-weight: bolder"> <font size="5">{{ regime.collation1 }}</td>
                <td> <font size="4" style="font-weight: bolder">{{ regime.dejeuner }}</td>
                <td style="color: #035426;font-weight: bolder"><font size="4"> {{ regime.collation2 }}</td>
                <td> <font size="4" style="font-weight: bolder">{{ regime.diner }}</td>
                <td> <font size="4" style="font-weight: bolder">{{ regime.conseils }}</td>
                <td>
                    <a href="{{ path('regime_show', {'id': regime.id}) }}">show</a>
                    <a href="{{ path('regime_edit', {'id': regime.id}) }}">edit</a>
                </td>

             </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     <a href="{{ path('regime_new') }}">Create new</a>



  {% endblock %}
